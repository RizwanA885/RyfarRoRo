    <div id="notification-popup" class="fixed bottom-5 right-5 bg-gray-900 text-white p-4 rounded-lg shadow-xl text-sm opacity-0 transform translate-y-10">
        Nombor telah disalin!
    </div>

    <script>
        document.getElementById('currentYear').textContent = new Date().getFullYear();

        function copyToClipboard(text, type) {
            const input = document.getElementById('phoneNumberToCopy');
            input.value = text;
            input.select();
            input.setSelectionRange(0, 99999); 
            try {
                document.execCommand('copy');
                showNotification( (type ? type : 'Teks') + ' telah disalin ke clipboard!');
            } catch (err) {
                showNotification('Gagal menyalin. Sila salin secara manual.');
            }
            input.blur(); 
        }

        function showNotification(message) {
            const popup = document.getElementById('notification-popup');
            popup.textContent = message;
            popup.classList.remove('opacity-0', 'translate-y-10');
            popup.classList.add('opacity-100', 'translate-y-0');

            setTimeout(() => {
                popup.classList.remove('opacity-100', 'translate-y-0');
                popup.classList.add('opacity-0', 'translate-y-10');
            }, 3000);
        }
    </script>

